// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model Posts {
  id       Int        @id @default(autoincrement())
  title    String     @unique
  content  String
  image    String
  likes    Int
  comments Comments[]
}

model Comments {
  id      Int    @id @default(autoincrement())
  content String
  post    Posts  @relation(fields: [postsId], references: [id])
  postsId Int
}
